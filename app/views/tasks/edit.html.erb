<h1>Edit task</h1>
<%= form_for(@task) do |f| %>
 <div class="form-group">
    <%= f.label :title %>
    <div>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <div>
      <%= f.text_field :details %>
    </div>
  </div>

  <div>
    <%= f.check_box :completed %>
    <%= f.label :completed %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<%= link_to "↩️ Back to list", tasks_path %>



